.container {
  display: flex;
}

.index-container {
  display: flex;
  align-items: baseline;
}

.plain {
  font-size: 16px;
}

.issue-number {
  font-size: 30px;
  font-weight: 800;
  margin-right: 8px;
}

.vertical-line {
  margin-right: 8px;
  height: 22px;
  border-left: 1px solid black;
}

.date {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.month {
  font-size: 12px;
  line-height: 12px;
  padding-bottom: 2px;
  margin-right: 2px;
}

.year {
  font-size: 10px;
  line-height: 10px;
}